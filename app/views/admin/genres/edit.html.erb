<div class="container p-4">
  <h4 class="p-4">ジャンル編集</h4>
  <div class="row p-4">
    <div class="col-6">
      <%=form_with model: @genre, url: "/admin/genres/#{@genre.id}", local:true do |genre| %>
        ジャンル名
        <%= genre.text_field :name %>
        <%= genre.submit '変更を保存', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>