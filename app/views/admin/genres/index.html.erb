<div class="container p-4">
  <h4 class="p-4">ジャンル一覧・追加</h4>
  <div class="row">
    <div class="col-6">
      <%= form_with model: @genre,url:'/admin/genres', local:true do |genre| %>
        <%= genre.label :genre, "ジャンル名" %>
        <%= genre.text_field :name, placeholder: "ジャンル名" %>
        <%= genre.submit '新規登録', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row p-4">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ジャンル</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

