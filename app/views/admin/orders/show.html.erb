<div class="container p-4">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row col-12">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th class="col-2">購入者</th>
          <td class="col-10"><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.delivery_name %></td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model:@order, url: admin_order_path, local:true do |f| %>
            <%= f.select :status, [["入金待ち", :wait_for_payment], ["入金確認", :confirm_payment], ["製作中", :producing], ["発送準備", :ready_to_ship], ["発送済み", :complete_ship]] %>
            <%= f.submit "更新",class:"btn btn-success col-2" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="col">
        <table class="table">
          <thead>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </head>
          <% @order_details.each do |order| %>
          <tbody>
            <td><%= order.item.name %></td>
            <td><%= order.with_tax_price %></td>
            <td><%= order.amount %></td>
            <td><%= order.with_tax_price * order.amount %></td>
            <td>
              <%= form_with model:order, url: admin_order_detail_path(order), local:true do |f| %>
              <%= f.select :making_status, [["着手不可", :not_startable], ["製作待ち", :wait], ["製作中", :producing], ["製作完了", :complete]] %>
            </td>
            <td>
              <%= f.submit "更新",class:"btn btn-success" %>
              <% end %>
            </td>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  <div class="col-4">
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>
              <% @total = 0 %>
              <% @order_details.each do |order| %>
              <% @total += order.with_tax_price * order.amount %>
              <% end %>
              <%= @total.to_s(:delimited) %>円
            </td>
          </tr>
          <tr>
            <th>送料</th>
            <td>800円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td>
              <% @total_payment = 0 %>
              <% @total_payment = @total + 800 %>
              <%= @total_payment.to_s(:delimited) %>円
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
