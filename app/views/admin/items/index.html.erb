<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>商品一覧</h2>
      <%= link_to new_admin_item_path do %>
      <div class="text-right">
        <span><i class="fas fa-plus-circle text-right "></i></span>
        <% end %>
      </div>
        <table class="table">
          <thead>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </head>
          <% @items.each do |item| %>
          <tbody>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active? %>
            <td class="text-success">
              販売中
            </td>
            <% else %>
            <td>
              販売停止中
            </td>
            <% end %>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>