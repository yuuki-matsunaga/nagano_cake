<div class="container">
  <h4 class="p-4">マイページ</h4>
  <div class="row">
    <div class="">
      <div class="row row-cols-2 py-2">
        <div class="col"><h4>登録情報</h4></div>
        <div class="col"><%= link_to "編集する", customers_edit_path, class: "btn btn-success text-left" %></div>
      </div>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="thead-light">氏名</th>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <th class="thead-light">カナ</th>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <th class="thead-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="thead-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="thead-light">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="thead-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="container">
        <div class="row row-cols-2">
          <div class="col py-2"><h4>配送先</h4></div>
          <div class="col"><%= link_to "一覧を見る",deliveries_path, class:"btn btn-primary" %></div>
          <div class="col py-2"><h4>注文履歴</h4></div>
          <div class="col"><%= link_to "一覧を見る",orders_path, class:"btn btn-primary" %></div>
        </div>
      </div>
    </div>
  </div>
</div>
