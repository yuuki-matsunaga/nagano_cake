<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="p-4">会員情報編集</h2>
      <%= form_with model:@customer, url: customers_update_path, local:true do |customer| %>
      <table class="table table-borderless">
        <tbody>
          <tr class="row">
            <th class="col-3">氏名</th>
            <td class="col-3"><%= customer.text_field :last_name,class:"form-control"%></td>
            <td class="col-3"><%= customer.text_field :first_name,class:"form-control"%></td>
            <td class="col-3"></td>
          </tr>
          <tr class="row">
            <th class="col-3">フリガナ</th>
            <td class="col-3"><%= customer.text_field :last_name_kana,class:"form-control"%></td>
            <td class="col-3"><%= customer.text_field :first_name_kana,class:"form-control"%></td>
            <td class="col-3"></td>
          </tr>
          <tr class="row">
            <th class="col-3">郵便番号</th>
            <td class="col-3"><%= customer.text_field :postal_code,class:"form-control"%></td>
            <td class="col-6"></td>
          </tr>
          <tr class="row">
            <th class="col-3">住所</th>
            <td class="col-6"><%= customer.text_field :address,class:"form-control"%></td>
            <td class="col-3"></td>
          </tr>
          <tr class="row">
            <th class="col-3">電話番号</th>
            <td class="col-3"><%= customer.text_field :telephone_number,class:"form-control"%></td>
            <td class="col-3"></td>
          </tr>
          <tr class="row">
            <th class="col-3">メールアドレス</th>
            <td class="col-3"><%= customer.text_field :email,class:"form-control"%></td>
            <td class="col-3"></td>
          </tr>
          <tr class="row text-center">
            <th class="col-3"></th>
            <td class="col-3"><%= customer.submit "編集内容を保存", class:"btn btn-success col"%></td>
            <td class="col-3"><%= link_to "退会する",customers_confirm_path,class:"btn btn-danger"%></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>

