<div class="container p-4">
  <h2>商品一覧（全<%= Item.count %>件）</h2>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-lg-3 col-md-6 mb-4">
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill, 200, 150, format: 'jpeg'  %>
    <% end %>
      <p>商品名：<%= item.name %></p>
      <p>¥<%= item.price %></p>
    </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>