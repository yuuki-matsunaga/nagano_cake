<div class="container">
  <div class="row">
     <h4 class="text-left p-4">ショッピングカート</h4>
     <div class="text-right"><%= link_to "カートを空にする" ,"/cart_items", method: :delete, class: "btn btn-danger m-4" %></div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col-3">商品名</th>
          <th scope="col">単価（税込）</th>
          <th scope="col">数量</th>
          <th scope="col">小計</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id),local:true do |f| %>
          <td><%= attachment_image_tag cart_item.item, :image, :fill, 75, 50, format: 'jpeg'  %> <%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td class="text-center"><%= f.select :amount, *[1..10], class:"btn btn-info" %> <%= f.submit "変更", class:"btn btn-success" %></td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td class="text-center"><%= link_to "削除する", cart_item_path(cart_item.id),method: :delete, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="p-4">
      <div class="pull-left">
        <%= link_to "買い物を続ける", root_path, class:"btn btn-info" %>
      </div>
    </div>
    <div class="float-right">
      <div class="p-4">
        <table class="table table-bordered">
          <tr>
            <th>合計金額</th>
            <td>
              <% @total = 0 %>
              <% @cart_items.each do |cart_item| %>
              <% @total +=  cart_item.subtotal %>
              <% end %>
              <%= @total.to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
    </div>
  </div>
</div>