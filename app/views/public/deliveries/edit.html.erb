<div class="container p-4">
  <h4>配送先編集</h4>
  <div class="row">
    <div class= col>
      <%= form_with model:@delivery,url: delivery_path,local:true do |f| %>
      <div class="form">
        <div class="form-group row">
          <label for="postal_code" class="co-2 col-form-label">郵便番号（ハイフンなし）</label>
          <div class="col-3">
           <%= f.text_field :postal_code,class:"form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="address" class="col-2 col-form-label">住所</label>
          <div class="col-6">
            <%= f.text_field :address,class:"form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="name" class="col-2 col-form-label">名前</label>
          <div class="col-3 form-inline text-right">
            <%= f.text_field :name,class:"form-control" %><%= f.submit '変更内容を保存', class:"btn btn-success m-4" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
