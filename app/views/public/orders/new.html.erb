<div class="container">
  <div class="row">
    <h4 class="p-4">注文情報入力</h4>
  </div>
  <div class="row col">
    <div>
      <div class="field col">
        <h6 class="font-weight-bold">支払い方法</h6>
        <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
        <div class="radio-inline p-2">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: "checked" %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
        </div>
        <div class="radio-inline p-2">
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
        </div>

        <h6 class="font-weight-bold">お届け先</h6>
        <div class="radio-inline p-2">
          <%= f.radio_button :select_address, :'0', checked: "checked" %>
          <%= f.label :select_address, 'ご自身の住所' %>
          <% my_address = "〒" + @customer.postal_code + "" + @customer.address %>
          <p><%= my_address %></p>
          <p><%= @customer.full_name %></p>
        </div>
        <div class="radio-inline p-2">
          <%= f.radio_button :select_address, :'1' %>
          <%= f.label :select_address, '登録済みの住所から選択' %><br>
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
        </div>
        <div class="radio-inline p-2">
          <%= f.radio_button :select_address, :'2' %>
          <%= f.label :select_address, '新しいお届け先' %><br>
        <div class="form">
          <div class="form-group row col">
            <label for="postal_code" class="col-7 col-form-label">郵便番号（ハイフンなし）</label>
            <div class="col-5">
             <%= f.text_field :postal_code %>
            </div>
          </div>
          <div class="form-group row col">
            <label for="address" class="col-7 col-form-label">住所</label>
            <div class="col-5">
              <%= f.text_field :address %>
            </div>
          </div>
          <div class="form-group row col">
            <label for="delivery_name" class="col-7 col-form-label">名前</label>
            <div class="col-5">
              <%= f.text_field :delivery_name %>
              <%= f.submit '確認画面へ進む', class:"btn btn-success form-inline m-2" %>
            </div>
          </div>
        </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>