<div class="container">
  <h4 class="p-4">注文情報確認</h4>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col-3">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, format: 'jpeg'  %> <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td class="text-center"><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <td>送料</td>
          <td>800</td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td>
            <%= @total.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <td>請求金額</td>
          <% @total_payment = 800 + @total %>
          <td><%= @total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row p-4">
    <div class="col">
      <table class="table table-borderless">
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td>〒<%= @order.postal_code %><%= @order.address %><br><%= @order.delivery_name %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @order,url: orders_path, local: true do |f| %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :delivery_name %>
      <%= f.submit '注文を確定する', class:"btn btn-success "%>
    <% end %>
  </div>
</div>