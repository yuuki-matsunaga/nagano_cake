<div class="container p-4">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <div class="col-7">
      <h5 class="font-weight-bold">注文情報</h5>
       <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="thead-light">注文日</th>
            <td><%= @order.created_at.strftime('%y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="thead-light">配送先</th>
            <td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.delivery_name %></td>
          </tr>
          <tr>
            <th class="thead-light">支払い方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="thead-light">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-5">
      <h5 class="font-weight-bold">請求情報</h5>
       <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="thead-light">商品合計</th>
            <td>
              <% @total = 0 %>
              <% @order.order_details.each do |order_item| %>
              <% @total += order_item.item.with_tax_price * order_item.amount %>
              <% end %>
              <%= @total.to_s(:delimited) %>
            </td>
          </tr>
          <tr>
            <th class="thead-light">配送料</th>
            <td>800</td>
          </tr>
          <tr>
            <th class="thead-light">ご請求額</th>
            <td>
              <% @total_payment = 0 %>
              <% @total_payment = @total + 800 %>
              <%= @total_payment.to_s(:delimited) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h5 class="font-weight-bold">注文内容</h5>
       <table class="table table-bordered">
         <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.with_tax_price %></td>
            <td><%= order_item.amount %></td>
            <td>
              <% @total = order_item.item.with_tax_price * order_item.amount %>
              <%= @total %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>